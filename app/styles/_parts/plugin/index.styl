.plugin-index
  .page-content

    .plugin-section
      margin-bottom 20px

    .plugin-header
      h1
        margin-top 0
        font-weight 400
      .user-info
        padding-left 10px
      p
        margin-top 30px

    .plugin-details
      .meta
        display table
        overflow hidden
        text-overflow ellipsis
        width auto
        padding 0
        li
          display table-row
          list-style none
          label,span
            display table-cell
            font-weight 400
          span
            padding-left 20px
          label
            color #999
            text-transform uppercase
            font-size 12px

    .plugin-installation
      h4
        font-weight 100
      .installer-terminal
        font-family Inconsolata
        margin-top 20px
        padding 15px 0
        background-color #eee
        overflow auto
        ul
          margin-bottom 0
          list-style none
          li
            font-size 16px
            color #444
            whitespace no-wrap
            &::before
              content "$"
              padding-right 10px
              color color-hexo-light-blue

    .plugin-keywords
      a
        background-color #f5f5f5
        border-radius 10px
        margin 5px
        padding 3px 5px
        &:hover
          text-decoration none
          border 1px solid #e7e7e7

    .plugin-readme
      .readme-contents
        background-color #f5f5f5
        padding 30px
        border-radius 10px
