<div {{bind-attr class=":wrapper pageClass"}}>
  <!-- Navigation -->
  <nav class="navbar navbar-default navbar-static-top" role="navigation">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      {{#if isNotIndex}}
        {{#link-to 'index' class='navbar-brand'}}
          HEXO PLUGIN MANAGER
        {{/link-to}}
      {{/if}}
    </div>
    <!-- /.navbar-header -->
    <ul class="nav navbar-top-links navbar-right">
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
          <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
        </a>
        <ul class="dropdown-menu dropdown-user">
          {{#if isAuthenticated}}
            <li>
              {{#link-to 'users.current'}}
                <i class="fa fa-user fa-fw"></i> User Profile
              {{/link-to}}
            </li>
            {{!-- <li>
              <a href="#"><i class="fa fa-gear fa-fw"></i> Settings</a>
            </li> --}}
            <li class="divider"></li>
            <li>
              <a href="#" {{action 'logout'}}>
                <i class="fa fa-sign-out fa-fw"></i> Logout
              </a>
            </li>
          {{else}}
            <li>
              {{#link-to 'sessions'}}
                <i class="fa fa-sign-in fa-fw"></i> Login
              {{/link-to}}
            </li>
            <li class="divider"></li>
            <li>
              {{#link-to 'users.signup'}}
                <i class="fa fa-check-square-o fa-fw"></i> Register
              {{/link-to}}
            </li>
          {{/if}}
        </ul>
        <!-- /.dropdown-user -->
      </li>
      <!-- /.dropdown -->
    </ul>
    <!-- /.navbar-top-links -->
  </nav>

  <div class="page-wrapper">
    <div class="row">
      <div class="col-lg-2 col-sidebar">
        {{render "sidebar"}}
      </div>
      <div class="col-lg-8 col-app-outlet">
        {{outlet}}
      </div>
      <div class="col-lg-2">
        <!-- Hi :) -->
      </div>
    </div>
  </div>
  <!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->
