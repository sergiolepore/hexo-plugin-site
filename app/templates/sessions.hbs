<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Please Sign In</h3>
        </div>
        <div class="panel-body">
          <form role="form">
            <fieldset>
              <div class="form-group">
                {{input name="email" value=email placeholder="Email" type="email" autofocus="" class="form-control"}}
              </div>
              <div class="form-group">
                {{input name="password" value=password placeholder="Password" type="password" class="form-control"}}
              </div>
              <button {{action "loginUser"}} class="btn btn-lg btn-success btn-block">Login</button>
            </fieldset>
          </form>
        </div>
    </div>
  </div>
</div>
