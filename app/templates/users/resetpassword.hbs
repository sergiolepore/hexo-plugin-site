<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Create a new Password</h3>
        </div>
        <div class="panel-body">
          <form role="form" {{action 'save' on="submit"}}>
            <fieldset>
              <div {{bind-attr class=":form-group passwordHasErrors:has-error"}}>
                {{input name="password" value=password placeholder="Password" type="text" autofocus="" class="form-control"}}
                {{#if passwordHasErrors}}
                  <div class="help-block">
                    <ul>
                      {{#each error in errors.password}}
                        <li><i class="fa fa-exclamation-circle fa-fw"></i> {{error}}</li>
                      {{/each}}
                    </ul>
                  </div>
                {{/if}}
              </div>

              <div {{bind-attr class=":form-group passwordConfirmationHasErrors:has-error"}}>
                {{input name="passwordConfirmation" value=passwordConfirmation placeholder="Password Confirmation" type="text" autofocus="" class="form-control"}}
                {{#if passwordConfirmationHasErrors}}
                  <div class="help-block">
                    <ul>
                      {{#each error in errors.passwordConfirmation}}
                        <li><i class="fa fa-exclamation-circle fa-fw"></i> {{error}}</li>
                      {{/each}}
                    </ul>
                  </div>
                {{/if}}
              </div>

              <button type="submit" class="btn btn-lg btn-success btn-block">Submit</button>
            </fieldset>
          </form>
        </div>
    </div>
  </div>
</div>
